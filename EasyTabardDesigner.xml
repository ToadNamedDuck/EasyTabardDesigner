<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\Blizzard_SharedXML\UI.xsd">
    <Script file="EasyTabardDesigner.lua"/>
    <Script file="TabardIconIDs.lua"/>
    <!-- Template Icon Display/Select Button -->
     <Frame name="EasyTabardDesigner_IconSelectTemplate" virtual="true">
        <Scripts>
            <OnLoad>
                EasyTabardDesigner_SetEmblemButtonIcon(self:GetName());
            </OnLoad>
        </Scripts>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture setAllPoints="true">
                    <Color r="0" g="0" b="0"/>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <Texture name="$parent_EasyTabardDesigner_TabardFrameEmblemTopRight" alphaMode="ADD">
                    <Size x="100" y="119"/>
                    <Anchors>
                        <Anchor point="TOPRIGHT" relativeTo="$parent" x="9" y="6"/>
                    </Anchors>
                    <TexCoords left="0" right="0.5" top="0" bottom="1"/>
                </Texture>
                <Texture name="$parent_EasyTabardDesigner_TabardFrameEmblemBottomRight" alphaMode="ADD">
                    <Size x="100" y="74"/>
                    <Anchors>
                        <Anchor point="TOP" relativeTo="$parent_EasyTabardDesigner_TabardFrameEmblemTopRight" relativePoint="BOTTOM"/>
                    </Anchors>
                    <TexCoords left="0" right="0.5" top="0" bottom="1"/>
                </Texture>
                <Texture name="$parent_EasyTabardDesigner_TabardFrameEmblemTopLeft" alphaMode="ADD">
                    <Size x="100" y="119"/>
                    <Anchors>
                        <Anchor point="RIGHT" relativeTo="$parent_EasyTabardDesigner_TabardFrameEmblemTopRight" relativePoint="LEFT" x="0" y="0"/>
                    </Anchors>
                    <TexCoords left="0.5" right="0" top="0" bottom="1"/>
                </Texture>
                <Texture name="$parent_EasyTabardDesigner_TabardFrameEmblemBottomLeft" alphaMode="ADD">
                    <Size x="100" y="74"/>
                    <Anchors>
                        <Anchor point="TOP" relativeTo="$parent_EasyTabardDesigner_TabardFrameEmblemTopLeft" relativePoint="BOTTOM"/>
                    </Anchors>
                    <TexCoords left="0.5" right="0" top="0" bottom="1"/>
                </Texture>
                <FontString name="$parent_IconName" inherits="GameFontNormal">
                    <Size x="200" y="16"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="$parent_EasyTabardDesigner_TabardFrameEmblemBottomLeft" relativePoint="BOTTOMLEFT"></Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
     </Frame>
    <!-- Template Color/Other Select Button -->
    <!-- Other Template Accept/Cancel Button -->
    <!-- Main Frame -->
    <Frame name="EasyTabardDesignerFrame" movable="true" enableMouse="true" registerForDrag="LeftButton">
        <Scripts>
            <OnLoad>
                EasyTabardDesigner_OnLoad(self);
            </OnLoad>
            <OnDragStart>
                self:StartMoving();
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing();
            </OnDragStop>
            <OnEvent>
                EasyTabardDesigner_OnEvent(self, event, ...);
            </OnEvent>
        </Scripts>
        <Size x="200" y="250"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture setAllPoints="true">
                    <Color r="0" g="0" b="0" a="0.4"/>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString name="EasyTabardDesigner_TabardModeText" inherits="GameFontNormal">
                    <Size x="200" y="16"/>
                    <Color r="1" g="1" b="1"/>
                    <Anchors>
                        <Anchor point="TOP" x="0" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button name="EasyTabardDesigner_CloseButton" inherits="UIPanelCloseButtonNoScripts">
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeTo="EasyTabardDesignerFrame"/>
                </Anchors>
                <Size x="16" y="16"/>
                <Scripts>
                    <OnClick>
                        EasyTabardDesigner_CloseButton();
                    </OnClick>
                </Scripts>
            </Button>

            <TabardModel name="EasyTabardDesigner_TabardModel" mixin="TabardModelFrameMixin">
                <Size x="200" y="236"/>
                <Anchors>
                    <Anchor point="BOTTOM" relativeTo="EasyTabardDesignerFrame" x="30"/>
                </Anchors>
            </TabardModel>

            <Frame name="TabardIcon_1" inherits="EasyTabardDesigner_IconSelectTemplate">
                <Size x="200" y="216"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="EasyTabardDesignerFrame" relativePoint="TOPRIGHT"/>
                </Anchors>
            </Frame>

        </Frames>
    </Frame>
</Ui>