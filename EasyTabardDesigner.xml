                    <Anchor point="TOPLEFT" relativeTo="EasyTabardDesignerFrame" relativePoint="TOPRIGHT"/>
                </Anchors>
                <Scripts>
                    <OnVerticalScroll>
                        FauxScrollFrame_OnVerticalScroll(50, EasyTabardDesigner_EmblemIconScrollUpdate);
                    </OnVerticalScroll>
                </Scripts>
                <Frames>
                    <Frame name="TabardIcon_1" inherits="EasyTabardDesigner_IconSelectTemplate">
