<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\Blizzard_SharedXML\UI.xsd">
    <Script file="EasyTabardDesigner.lua"/>
    <!-- Template Icon Display/Select Button -->
    <!-- Template Color/Other Select Button -->
    <!-- Other Template Accept/Cancel Button -->
    <!-- Main Frame -->
    <Frame name="EasyTabardDesignerFrame" moveable="true" enableMouse="true">
        <Scripts>
            <OnLoad>
                EasyTabardDesigner_OnLoad(self);
            </OnLoad>
        </Scripts>
        <Size x="200" y="250"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture setAllPoints="true">
                    <Color r="0" g="0" b="0"/>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <!-- Put a button here to close the window, should anchor top and right - should also stop tabard creation-->
                <FontString name="EasyTabardDesigner_TestOverlayText" inherits="GameFontNormal">
                    <Size x="255" y="16"/>
                    <Color r="255" g="255" b="255"/>
                    <Anchors>
                        <Anchor point="center" x="0" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Button name="EasyTabardDesigner_CloseButton">
            <Anchors>
                <Anchor point="TOPRIGHT" relativeTo="EasyTabardDesignerFrame"/>
            </Anchors>
            <Size x="15" y="15"/>
            <Scripts>
                <OnClick>
                    EasyTabardDesigner_CloseButton();
                </OnClick>
            </Scripts>
        </Button>
    </Frame>
</Ui>