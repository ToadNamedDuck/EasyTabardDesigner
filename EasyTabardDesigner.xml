<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\Blizzard_SharedXML\UI.xsd">
    <Script file="EasyTabardDesigner.lua"/>
    <!-- Template Icon Display/Select Button -->
    <!-- Template Color/Other Select Button -->
    <!-- Other Template Accept/Cancel Button -->
    <!-- Main Frame -->
    <Frame name="EasyTabardDesignerFrame" movable="true" enableMouse="true" registerForDrag="LeftButton">
        <Scripts>
            <OnLoad>
                EasyTabardDesigner_OnLoad(self);
            </OnLoad>
            <OnDragStart>
                self:StartMoving();
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing();
            </OnDragStop>
        </Scripts>
        <Size x="200" y="250"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture setAllPoints="true">
                    <Color r="0" g="0" b="0"/>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString name="EasyTabardDesigner_TestOverlayText" inherits="GameFontNormal">
                    <Size x="255" y="16"/>
                    <Color r="1" g="1" b="1"/>
                    <Anchors>
                        <Anchor point="CENTER" x="0" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button name="EasyTabardDesigner_CloseButton" inherits="UIPanelCloseButtonNoScripts">
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeTo="EasyTabardDesignerFrame" x="2" y="2"/>
                </Anchors>
                <Size x="16" y="16"/>
                <Scripts>
                    <OnClick>
                        EasyTabardDesigner_CloseButton();
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
    </Frame>
</Ui>